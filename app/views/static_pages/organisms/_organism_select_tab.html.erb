<div id="accordion" role="tablist" aria-multiselectable="true">
  <div class="card">
    <div class="card-header" role="tab" id="show_headers">
      <h5 class="mb-0">
        <a data-toggle="collapse" data-parent="#accordion" href="#org_filter" aria-expanded="true" aria-controls="org_filter">
          Make query
        </a>
      </h5>
    </div>
    <div id="org_filter" class="collapse show" role="tabpanel" aria-labelledby="show_headers">
      <div class="card-block">
        <div class="dropdown">
          <%= render "static_pages/organisms/organism_table_filters" %>
        </div>
      </div>
    </div>
  </div>
  <div class="card">
    <div class="card-header" role="tab" id="show_headers">
      <h5 class="mb-0">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Show/hide table columns
        </a>
      </h5>
    </div>
    <div id="collapseOne" class="collapse show" role="tabpanel" aria-labelledby="show_headers">
      <div class="card-block">
        <%= render "static_pages/organisms/organism_table_headers" %> 
      </div>
    </div>
  </div>
</div>
<button id="load_button" data-toggle="tooltip" data-placement="top" title="Download table as CSV" type="button" class="btn btn-secondary">Download table</button>
<button id="btn-select" class="btn btn-warning" data-target="basic">Deselect all rows</button>
<b><div id="total_org_counter">Total selected organisms: 0</div></b>